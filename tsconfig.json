{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}