// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				// // Get all extensions except cortex-debug, then disable them individually
				// "$(${execPath} --list-extensions | grep -v cortex-debug | grep -v mcu-debug | grep -v cpptools | xargs -I {} echo --disable-extension={})",
				"--extensionDevelopmentPath=${workspaceRoot}",
				"${workspaceRoot}/ardupilot",
			],
			"sourceMaps": true,
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Run Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"$(${execPath} --list-extensions | grep -v cortex-debug | grep -v mcu-debug | grep -v cpptools | xargs -I {} echo --disable-extension={})",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
				"${workspaceFolder}/ardupilot",
			],
			"outFiles": ["${workspaceFolder}/out/test/**/*.js",
						"${workspaceFolder}/out/*.js"],
      		"sourceMaps": true,
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Debug apProgramUtils Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"$(${execPath} --list-extensions | grep -v cortex-debug | grep -v mcu-debug | grep -v cpptools | xargs -I {} echo --disable-extension={})",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
				"${workspaceFolder}/ardupilot",
			],
			"env": {
				"TEST_SUITE_FILTER": "apProgramUtils"
			},
			"outFiles": ["${workspaceFolder}/out/test/**/*.js",
						"${workspaceFolder}/out/*.js"],
			"sourceMaps": true,
			"preLaunchTask": "npm: compile"
		},
    	{
      		"name": "Run Extension CLI Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/out/test/runTest.js",
			"env": {
				"NODE_ENV": "test"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"sourceMaps": true,
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Debug E2E Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/e2e/index",
				"--disable-workspace-trust",
				"${workspaceFolder}/ardupilot",
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js",
				"${workspaceFolder}/out/*.js"
			],
			"sourceMaps": true,
			"preLaunchTask": "npm: compile",
			"env": {
				"NODE_ENV": "test"
			}
		}
	]
}